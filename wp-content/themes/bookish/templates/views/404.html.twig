{% extends 'layouts/app.twig' %}

{% block post_head_scripts %}
<style>
    .nav-wrapper {
        animation-name: shake-rotation;
        animation-fill-mode: forwards;
        animation-delay: 350ms;
        animation-iteration-count: 1;
        animation-duration: 650ms;
        animation-timing-function: ease-out;
    }

    .custom-logo {
        transform: rotate(180deg) translate(0,20px);
    }

    footer.footer {
        transform: scale(-1, 1);
        transition: all 225ms ease;
    }

    footer.footer:hover {
        transform: scale(1, 1);
        transition: all 225ms ease;
    }

    @keyframes shake-rotation {
        0% {
            transform: rotate(0) translate(10px, 0);
        }
        100% {
            transform: rotate(2deg) translate(0%, 50%);
        }
    }

</style>
{% endblock %}

{% block content %}
    <main class="container mx-auto my-4">
        <h1>
            Oei, deze pagina bestaat niet.
        </h1>

        <h3>
            Wij zijn er een beetje ondersteboven van.
        </h3>

        <section class="lg:w-1/3">
            <p>
                Neem een kijkje op de <a href="/">homepage</a>, of
                probeer hierboven te zoeken.
            </p>
        </section>
    </main>
{% endblock %}
