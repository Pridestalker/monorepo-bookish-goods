<div class="woocommerce-terms-and-conditions-wrapper">
    {% do action('woocommerce_checkout_terms_and_conditions') %}

    {% if enabled %}
        <p class="form-row validate-required">
            <input type="checkbox" name="terms" id="terms" {% if checked %}checked{% endif %}>
            <label class="woocommerce-form__label woocommerce-form__label-for-checkbox checkbox" for="terms">
                <span class="woocommerce-terms-and-conditions-checkbox-text">{% do fn(content_function) %}</span>&nbsp;<span class="required">*</span>
            </label>
            <input type="hidden" name="terms-field" value="1" />
        </p>
    {% endif %}
</div>
