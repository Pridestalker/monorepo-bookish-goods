<nav class="pagination" role="navigation">
    {% if pagination.prev %}
        <a href="{{ pagination.prev.link }}" class="pagination-button prev">
            <i class="fad fa-long-arrow-left"></i>
        </a>
    {% endif %}

    {% for page in pagination.pages %}
        {% if page.link %}
            <a href="{{ page.link }}" class="pagination-button">
                {{ page.title }}
            </a>
        {% else %}
            <span class="pagination-button {{ page.class }}">
                {{ page.title }}
            </span>
        {% endif %}
    {% endfor %}

    {% if pagination.next %}
        <a href="{{ pagination.next.link }}" class="pagination-button next">
            <i class="fad fa-long-arrow-right"></i>
        </a>
    {% endif %}
</nav>
